<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="blue darken-2">
        <div class="nav-wrapper">
            <a href="#" class="brand-logo"><img class="brand-logo-img" src="~/Imagens/logo.png"/></a>
            <a href="#" data-activates="mobile-demo-login" class="button-collapse"><i class="material-icons">menu</i></a>

            @*Ativar esse menu quando estiver logado*@
            <ul class="side-nav" id="mobile-demo-logout">
                <li>@Html.ActionLink("Sair", "Index", "Home")</li>
                <li>@Html.ActionLink("Ajuda", "Index", "Home")</li>
            </ul>

            <ul class="side-nav" id="mobile-demo-login">
                <li>@Html.ActionLink("Entrar", "Index", "Home")</li>
                <li>@Html.ActionLink("Ajuda", "Index", "Home")</li>
            </ul>
        </div>
    </nav>
   
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materialize")
    @RenderSection("scripts", required: false)
</body>
</html>
